{
    auto_https off
}

:80 {
    encode gzip

    # Serve built Vite files
    root * /app/build
    file_server

    # SPA fallback for React Router
    try_files {path} /index.html

    # Proxy API requests to backend
    handle_path /api/* {
        reverse_proxy http://157.173.218.149:3001
    }
}

